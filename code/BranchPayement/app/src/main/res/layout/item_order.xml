<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"

    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/textAd">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/order_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hukama Models"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/order_created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created at"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginVertical="8dp"
                android:background="@color/tiers"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:id="@+id/order_customerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer ID"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/order_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/tiers"
                app:layout_constraintTop_toBottomOf="@id/order_code"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="8dp" />
            <TextView
                android:id="@+id/order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 Activities"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/order_subscription_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$230"
                    android:textSize="18sp"
                    android:textColor="#FB8C00"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:paddingStart="5dp"/>

                <TextView
                    android:id="@+id/order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Type"
                    android:textSize="18sp"
                    android:textColor="#FB8C00"
                    android:textStyle="bold"
                    android:paddingStart="5dp"
                    android:layout_toEndOf="@id/order_subscription_id"
                    android:layout_marginStart="10dp"/>


            </RelativeLayout>
            <TextView
                android:id="@+id/order_updated_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated at"
                android:textSize="18sp"
                android:textColor="#FB8C00"
                android:textStyle="bold"
                android:paddingStart="5dp"
                android:layout_alignParentEnd="true"/>
            <Button
                android:id="@+id/paybutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textColor="@color/white"
                android:background="@color/primary"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
